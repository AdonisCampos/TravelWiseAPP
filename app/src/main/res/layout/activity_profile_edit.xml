<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo12"
    android:padding="10dp"
    tools:context=".Check_In_Activity">

    <ImageButton
        android:id="@+id/btnP"
        android:layout_width="124dp"
        android:layout_height="73dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="132dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContra"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/lblPerfil"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginTop="124dp"
        android:fontFamily="sans-serif-medium"
        android:text="EDITA TU PERFIL"
        android:textAlignment="center"
        android:textColor="#FA02D9"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUsuarioEdit"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_email"
        android:drawablePadding="20dp"
        android:drawingCacheQuality="auto"
        android:ems="10"
        android:hint="USUARIO"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#051361"
        android:textColorHint="#05134A"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreEdit" />


    <EditText
        android:id="@+id/txtCorreoEdit"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_contra"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#051361"
        android:textColorHint="#05134A"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuarioEdit" />

    <EditText
        android:id="@+id/txtNombreEdit"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_icono"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="NOMBRE"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#040303"
        android:textColorHighlight="#030353"
        android:textColorHint="#051E67"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPerfil" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="140dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#05095C"
        android:backgroundTintMode="add"
        android:text="Editar"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textColorHighlight="#400303"
        android:textColorHint="#770707"
        android:textColorLink="#550909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContra" />

    <Button
        android:id="@+id/btnKeep"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#05095C"
        android:backgroundTintMode="add"
        android:text="Guardar datos"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textColorHighlight="#400303"
        android:textColorHint="#770707"
        android:textColorLink="#550909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toEndOf="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@+id/txtContra" />

    <EditText
        android:id="@+id/txtContra"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_contra"
        android:drawablePadding="18dp"
        android:ems="10"
        android:hint="CONTRASEÃ‘A"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#051361"
        android:textColorHint="#05134A"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoEdit" />


</androidx.constraintlayout.widget.ConstraintLayout>