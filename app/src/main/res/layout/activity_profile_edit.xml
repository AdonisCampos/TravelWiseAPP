<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo12"
    android:padding="10dp"
    tools:context=".Check_In_Activity">

    <ImageButton
        android:id="@+id/btnP"
        android:layout_width="124dp"
        android:layout_height="73dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="132dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContra"
        app:srcCompat="@drawable/home"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/lblPerfil"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginTop="124dp"
        android:fontFamily="sans-serif-medium"
        android:text="EDITA TU PERFIL"
        android:textAlignment="center"
        android:textColor="#FA02D9"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/txtCorreoEdit"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_contra"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#051361"
        android:textColorHint="#05134A"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPerfil" />

    <EditText
        android:id="@+id/txtContra"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_cajastexto"
        android:drawableStart="@drawable/custom_estilo_contra"
        android:drawablePadding="18dp"
        android:ems="10"
        android:hint="CONTRASEÃ‘A"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textColor="#0B0A0A"
        android:textColorHighlight="#051361"
        android:textColorHint="#05134A"
        android:textColorLink="#03115E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoEdit" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#05095C"
        android:text="Guardar Cambios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContra" />


</androidx.constraintlayout.widget.ConstraintLayout>