<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondodos"
    tools:context=".Recommendation_activity">

    <TextView
        android:id="@+id/lblAddCity"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:text="RECOMENDACIONES"
        android:textAlignment="center"
        android:textColor="#020F5A"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgLogoCiudad" />
    /

    <ImageView
        android:id="@+id/ImgLogoCiudad"
        android:layout_width="350dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recomendaciones" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="358dp"
        android:layout_height="482dp"
        android:background="@drawable/borde"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAddCity"
        app:layout_constraintVertical_bias="0.191">


        <Button
            android:id="@+id/btnRecomendarAdd"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#05095C"
            android:backgroundTintMode="add"
            android:text="AÃ‘ADIR RECOMENDACION"
            android:textAlignment="center"
            android:textColor="#F8F6F6"
            android:textColorHighlight="#400303"
            android:textColorHint="#770707"
            android:textColorLink="#550909" />

        <TextView
            android:id="@+id/lblTi"
            android:layout_width="323dp"
            android:layout_height="293dp"
            android:text="Recomendacion 1\nRecomendacion 2\nRecomendacion 3\nRecomendacion 4\nRecomendacion 5\nRecomendacion 6\nRecomendacion 7\nRecomendacion 8\nRecomendacion 9\nRecomendacion 10\nRecomendacion 11\nRecomendacion 12\nRecomendacion 13\nRecomendacion 14"
            android:textColor="#020F5A"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btnFinalizarCiudad"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#05095C"
            android:backgroundTintMode="add"
            android:text="FINALIZAR"
            android:textAlignment="center"
            android:textColor="#F8F6F6"
            android:textColorHighlight="#400303"
            android:textColorHint="#770707"
            android:textColorLink="#550909" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/btnPri"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/btnAnt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/btnAnt"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>