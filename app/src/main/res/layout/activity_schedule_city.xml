<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondodos"
    tools:context=".Schedule_city_activity">


    <TextView
        android:id="@+id/lblAddCity"
        android:layout_width="392dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="AÃ‘ADIR  CIUDADES"
        android:textAlignment="center"
        android:textColor="#020F5A"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgLogoCiudad" />

    <ImageView
        android:id="@+id/ImgLogoCiudad"
        android:layout_width="350dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edificiodeoficinas" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="346dp"
        android:layout_height="434dp"
        android:background="@drawable/borde"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAddCity"
        app:layout_constraintVertical_bias="0.125">


        <TextView
            android:id="@+id/lblTi"
            android:layout_width="311dp"
            android:layout_height="47dp"
            android:text="TITULO"
            android:textAlignment="center"
            android:textColor="#020F5A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtTitleCiudad"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="INGRESE EL TITULO "
            android:inputType="text"
            android:textColorHint="#030F57" />

        <TextView
            android:id="@+id/lblDescripcionCiudad"
            android:layout_width="311dp"
            android:layout_height="47dp"
            android:text="DESCRIPCION"
            android:textAlignment="center"
            android:textColor="#020F5A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtDescripcionCiudad"
            android:layout_width="310dp"
            android:layout_height="59dp"
            android:layout_marginTop="32dp"
            android:defaultFocusHighlightEnabled="false"
            android:ems="10"
            android:hint="INGRESE LA DESCRIPCION"
            android:inputType="text"
            android:textColorHint="#030F57" />

        <Button
            android:id="@+id/btnFinalizarCiudad"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#05095C"
            android:backgroundTintMode="add"
            android:text="FINALIZAR"
            android:textAlignment="center"
            android:textColor="#F8F6F6"
            android:textColorHighlight="#400303"
            android:textColorHint="#770707"
            android:textColorLink="#550909" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/btnPri"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/btnAnt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/btnAnt"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>