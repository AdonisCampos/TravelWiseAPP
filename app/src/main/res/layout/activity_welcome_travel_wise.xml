<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo"
    tools:context=".Welcome_TravelWise">

    <ImageView
        android:id="@+id/imgLogo3"
        android:layout_width="537dp"
        android:layout_height="240dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgBienvenido"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/lblBienvenido"
        android:layout_width="327dp"
        android:layout_height="227dp"
        android:layout_marginTop="4dp"
        android:text="¡Bienvenido a TravelWise! Tu compañero ideal para explorar Centroamérica con sabiduría. Descubre los requisitos de entrada, cotiza hoteles y mucho más. ¡Selecciona tu país y comienza tu aventura ahora mismo!"
        android:textAlignment="center"
        android:textColor="#35028E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo3" />

    <ImageView
        android:id="@+id/ImgBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bienvenido"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/btnExplorar"
        android:layout_width="368dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1E0350"
        android:text="¡PLANIFICA TU VIAJE!"
        android:textColor="#FAF7F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblBienvenido" />


</androidx.constraintlayout.widget.ConstraintLayout>